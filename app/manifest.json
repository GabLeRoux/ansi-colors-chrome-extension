{
  "name": "ansi-colors-chrome-extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Renders ansi escape characters on current page (ex: a log file with ansi colors viewed in chrome)",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/colorize.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/strip.js"]
    }
  ],
  "permissions": [
    "file://*",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "ansi colors chrome extension"
  }
}
